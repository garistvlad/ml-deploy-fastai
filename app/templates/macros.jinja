{% macro plot_barchart(prob_dc, prob_marvel, prob_tmnt) %}
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['DC', 'MARVEL', 'TMNT'],
        datasets: [{
            label: 'Proba',
            data: [{{ prob_dc }}, {{ prob_marvel }}, {{ prob_tmnt }}],
            backgroundColor: [
                'rgba(255, 99, 132, 0.5)',
                'rgba(54, 162, 235, 0.5)',
                'rgba(27, 191, 32, 0.5)',
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(27, 191, 32, 1)',
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            xAxes: [{
                gridLines: {
                    display:false
                }
            }],
            yAxes: [{
                gridLines: {
                    display:false
                }   
            }]
        }
    }
});
</script>
{% endmacro %}